<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bitacademy.java72.dao.MeetDao">
  <resultMap type="Meet" id="MeetMap">
    <id     column="meet_no"      property="meetNo" />
    <result column="meet_nm"   property="meetName" />
    <result column="meet_dt"    property="meetDate" />
    <result column="img_path" property="meetImg" />
    <result column="memb_no" property="memberNo" />
    
    
  </resultMap>
  
  
   
   <select id="list" parameterType="map" resultMap="MeetMap">
    SELECT meet_no, memb_no, meet_nm, meet_dt
    FROM meet_tb
    where memb_no=14
    ORDER BY meet_no desc
  </select>
  
  
  
  <select id="countAll" resultType="int">
    SELECT count(*) 
    FROM meet_tb
  </select>
  
  
   <insert id="insert" parameterType="Meet">
    INSERT INTO meet_tb(meet_nm,meet_dt,memb_no)
    values(#{meetName},#{meetDate},#{memberNo})
  </insert>
  
  <delete id="delete" parameterType="int">
    DELETE FROM board10 WHERE bno=#{value}
  </delete>

  <update id="update" parameterType="Board">
    UPDATE board10 SET 
      title=#{title},
      content=#{content},
      att_file1=#{attachFile1}  
    WHERE bno=#{no}      
  </update>
  <!--  
  <select id="get" parameterType="int" resultMap="BoardMap">
    SELECT bno, title, content, cre_dt, att_file1
    FROM board10
    WHERE bno=#{value}
  </select>
  -->  
</mapper>

















