<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bitacademy.java72.dao.MemberDao">
  <resultMap type="Member" id="MemberMap">
    <id     column="memb_no"    property="memberNo" />
    <result column="memb_nm"    	property="name" />
    <result column="email"    	property="email" />
    <result column="user_id"    	property="userId" />
    <result column="get_site"    	property="getSite" />
	<result column="addr_no"   	property="addressNo" />
    <result column="addr_det"   	property="addressDetail" />
    <result column="file_path"      	property="imgUrl" />
  </resultMap>
  
  <select id="list" parameterType="map" resultMap="MemberMap">
    SELECT mno, mname, email, tel, cre_dt
    FROM member
    ORDER BY mname asc
    LIMIT #{startIndex},#{pageSize} 
  </select>
  
  <select id="countAll" resultType="int">
    SELECT count(*)
    FROM member
  </select>
  
  <insert id="insert" parameterType="Member">
    INSERT INTO memb_tb(email,memb_nm,user_id,get_site,addr_no,addr_det,file_path)
    values(#{email},#{name},#{userId},#{getSite},#{addressNo},#{addressDetail},#{imgUrl})
  </insert>
  
  <delete id="delete" parameterType="int">
    DELETE FROM member WHERE mno=#{value}
  </delete>

  <update id="update" parameterType="Member">
    UPDATE member SET 
      mname=#{name},
      email=#{email},
      tel=#{tel},
      pwd=#{password},
      photo=#{photo}
    WHERE mno=#{no}      
  </update>
  
  <select id="get" parameterType="int" resultMap="MemberMap">
    SELECT mno, mname, email, tel, pwd, cre_dt, photo
    FROM member
    WHERE mno=#{value}
  </select>
  
  <select id="exist" 
          parameterType="map" resultMap="MemberMap">
    SELECT mno, mname, email, tel, cre_dt
    FROM member
    WHERE email=#{email} and pwd=#{password}
  </select>
  
  <select id="countEmail" 
      parameterType="string" 
      resultType="int">
    SELECT count(*)
    FROM member
    WHERE email = #{value}
  </select>
</mapper>

















